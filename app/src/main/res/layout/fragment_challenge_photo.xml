<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/photo_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/photo_due_tv"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/set_finish_day"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_back_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_finish_day"
        style="@style/Typography_S_Medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/photo_due_tv"
        android:layout_marginTop="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_monday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_due_tv"
        android:layout_marginTop="38dp"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/photo_monday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/30 (월)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_tuesday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toEndOf="@id/photo_monday_cl"
        app:layout_constraintTop_toBottomOf="@id/photo_due_tv"
        android:layout_marginTop="38dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/photo_tuesday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (화)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_wednesday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toEndOf="@id/photo_tuesday_cl"
        app:layout_constraintTop_toBottomOf="@id/photo_due_tv"
        android:layout_marginTop="38dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/photo_wednesday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (수)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_thursday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toEndOf="@id/photo_wednesday_cl"
        app:layout_constraintTop_toBottomOf="@id/photo_due_tv"
        android:layout_marginTop="38dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/photo_thurssday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (목)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_friday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_monday_cl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/photo_friday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (금)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_saturday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toEndOf="@id/photo_friday_cl"
        app:layout_constraintTop_toBottomOf="@id/photo_tuesday_cl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/photo_saturday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (토)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_sunday_cl"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_photo_day_selector"
        app:layout_constraintStart_toEndOf="@id/photo_saturday_cl"
        app:layout_constraintTop_toBottomOf="@id/photo_wednesday_cl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/photo_sunday_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7/31 (일)"
            style="@style/Typography_S_Medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black_300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/duration_tv"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_friday_cl"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"/>
    <TextView
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_duration"
        style="@style/Typography_S_Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_duration_et"
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_photo_duration_often"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="53dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/photo_often_tv"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/often"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_duration_et"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"/>
    <TextView
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_often"
        style="@style/Typography_S_Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_often_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/photo_often_et"
        android:layout_width="58dp"
        android:layout_height="28dp"
        style="@style/Typography_XS_Medium"
        android:inputType="text"
        android:background="@drawable/bg_photo_duration_often"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_often_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minimum_number"
        style="@style/Typography_SM_Medium"
        app:layout_constraintStart_toEndOf="@id/photo_often_et"
        app:layout_constraintTop_toBottomOf="@id/photo_often_tv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="29dp"/>

    <TextView
        android:id="@+id/photo_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_more_one"
        style="@style/Typography_2XS_Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_often_et"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/photo_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_red_asterisk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_often_et"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/btn_next_tv"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        style="@style/Typography_SM_Medium"
        android:background="@drawable/bg_btn_blue"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>