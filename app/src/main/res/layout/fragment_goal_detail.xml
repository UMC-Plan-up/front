<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="28dp"
    android:clickable="true"
    android:focusableInTouchMode="true" >

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIcon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/friendGoalTitle"
                android:layout_width="286dp"
                android:layout_height="33dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/goal_friend_detail"
                android:textColor="@color/black_400"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/friendGoalDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/goal_friend_detail_description"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/friendGoalTitle" />

            <TextView
                android:id="@+id/periodTitleText"
                android:layout_width="297dp"
                android:layout_height="27dp"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/duration"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/friendGoalDescriptionText" />

            <TextView
                android:id="@+id/periodDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/goal_period_select_instruction"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/periodTitleText" />

            <LinearLayout
                android:id="@+id/daySelectorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/periodDescriptionText">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dayOptionDailyButton"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/btn_no"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@string/everyday"
                    android:textColor="@color/black_300"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dayOptionWeeklyButton"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/btn_no"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@string/goal_period_weekly"
                    android:textColor="@color/black_300"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dayOptionMonthlyButton"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/btn_no"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@string/goal_period_monthly"
                    android:textColor="@color/black_300"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/frequencyTitleText"
                android:layout_width="279dp"
                android:layout_height="27dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/often"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daySelectorLayout" />

            <TextView
                android:id="@+id/frequencyDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/photo_often"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frequencyTitleText" />

            <LinearLayout
                android:id="@+id/frequencyInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frequencyDescriptionText">

                <EditText
                    android:id="@+id/frequencyInputEditText"
                    android:layout_width="58dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_timer_setting"
                    android:fontFamily="@font/pretendard_medium"
                    android:padding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/frequencyUnitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center_vertical"
                    android:text="@string/minimum_number"
                    android:textColor="@color/black_400"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/frequencyErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/error_more_one"
                android:textColor="@color/black_300"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frequencyInputLayout" />

            <TextView
                android:id="@+id/endDateTitleText"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/set_finish_day"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frequencyErrorText" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/endDateContentGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/endDateTitleText">

                <TextView
                    android:id="@+id/endDateDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@string/goal_end_date_instruction"
                    android:textColor="@color/black_300"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/endDateOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/endDateDescriptionText">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endOption1WeekButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/goal_end_after_1_week"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endOption1MonthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/goal_end_after_1_month"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endOption3MonthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/goal_end_after_3_months"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endDateOptionsLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/endDateOptionsLayout">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endOption6MonthButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/goal_end_after_6_months"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/endOption1YearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/goal_end_after_1_year"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/directEndDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/endDateOptionsLayout2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/directSetButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_no"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/category_custom_option"
                        android:textColor="@color/black_300"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dropdown_container1"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_timer_setting"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/directEndDateLayout"
                    app:layout_constraintTop_toBottomOf="@id/directEndDateLayout">

                    <TextView
                        android:id="@+id/challenge_year_tv"
                        style="@style/Typography_SM_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/year"
                        android:textColor="@color/black_400"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dropdown_year_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down_timer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dropdown_container2"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_timer_setting"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/dropdown_container1"
                    app:layout_constraintTop_toTopOf="@id/dropdown_container1">

                    <TextView
                        android:id="@+id/challenge_month_tv"
                        style="@style/Typography_SM_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month"
                        android:textColor="@color/black_400"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dropdown_month_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ic_arrow_down_timer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dropdown_container3"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_timer_setting"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/dropdown_container2"
                    app:layout_constraintTop_toTopOf="@id/dropdown_container2">

                    <TextView
                        android:id="@+id/challenge_day_tv"
                        style="@style/Typography_SM_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day"
                        android:textColor="@color/black_400"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dropdown_day_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ic_arrow_down_timer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goalContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/endDateContentGroup"
                app:layout_constraintBottom_toBottomOf="@id/endDateContentGroup"
                app:layout_constraintStart_toStartOf="@id/endDateContentGroup"
                app:layout_constraintEnd_toEndOf="@id/endDateContentGroup">

                <ImageView
                    android:id="@+id/bgImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_goal_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/lockImage"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_lock"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/goalContainer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_next_background"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>