<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/email_first_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/email_first_back_tv"
        app:layout_constraintBottom_toBottomOf="@id/email_first_back_tv"/>

    <TextView
        android:id="@+id/email_first_back_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록"
        app:layout_constraintStart_toEndOf="@id/email_first_back_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/email_first_title_tv"
        style="@style/TextAppearance.Pretendard.Medium.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="이메일 변경"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_first_back_tv" />

    <TextView
        android:id="@+id/email_first_explain_tv"
        style="@style/TextAppearance.Pretendard.Medium.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새롭게 사용할 이메일 주소를 입력해 주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_first_title_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_first_email_select_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_first_explain_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/email_first_et"
            style="@style/TextAppearance.Pretendard.Medium.S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이메일 주소를 입력하세요"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/semanticB4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/email_first_at_tv"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/email_first_at_tv"
            style="@style/TextAppearance.Pretendard.Medium.S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            app:layout_constraintStart_toEndOf="@id/email_first_et"
            app:layout_constraintEnd_toStartOf="@id/email_first_domain_atv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <AutoCompleteTextView
            android:id="@+id/email_first_domain_atv"
            style="@style/TextAppearance.Pretendard.Medium.S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이메일 주소를 입력하세요"
            android:textColorHint="@color/semanticB4"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/arrow_down"
            app:layout_constraintStart_toEndOf="@id/email_first_at_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/email_first_receive_btn_act_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/receive_link_activate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/email_first_receive_btn_deact_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/receive_link_deactivate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
