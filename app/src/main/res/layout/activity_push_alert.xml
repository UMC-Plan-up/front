<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/backIcon"
        app:layout_constraintBottom_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintTop_toTopOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        android:layout_marginTop="304dp">

        <TextView
            android:id="@+id/toggleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 목표 알림 받기"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/toggleIcon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_toggle_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toggleText1"
            app:layout_constraintBottom_toBottomOf="@id/toggleText1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E4E6E8"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="360dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        android:layout_marginTop="380dp">

        <TextView
            android:id="@+id/toggleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정기 알림 시각 설정"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/toggleIcon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_toggle_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toggleText2"
            app:layout_constraintBottom_toBottomOf="@id/toggleText2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="420dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent">


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="오전"
                android:background="@drawable/bg_timer_setting2"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:textColor="#6F6F6F"
                android:textColorHint="#6F6F6F"
                android:inputType="none" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_arrow_up"
                android:contentDescription="@null" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="07시"
                android:background="@drawable/bg_timer_setting2"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:textColor="#6F6F6F"
                android:textColorHint="#6F6F6F"
                android:inputType="none" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_arrow_up"
                android:contentDescription="@null" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="30분"
                android:background="@drawable/bg_timer_setting2"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:textColor="#6F6F6F"
                android:textColorHint="#6F6F6F"
                android:inputType="none" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_arrow_up"
                android:contentDescription="@null" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daySelectorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="456dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:text="매일"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="월"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="화"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="수"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="목"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="금"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:text="토"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="일"
            android:textSize="14sp"
            android:background="@drawable/bg_timer_setting2"
            android:textColor="#6F6F6F"
            android:fontFamily="@font/pretendard_regular" />
    </LinearLayout>


    <TextView
        android:id="@+id/emailFormatErrorText"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="518dp"
        android:background="@drawable/bg_error_box"
        android:gravity="center"
        android:text="알림 설정 내역이 저장되었어요."
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="저장"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="617dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>