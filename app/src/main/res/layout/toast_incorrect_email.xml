<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/my_page_toast_check_email_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toast_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/my_page_toast_check_email_tv"
        style="@style/TextAppearance.Pretendard.Medium.SM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 형식을 다시 확인해주세요"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_page_toast_check_email_iv"
        app:layout_constraintBottom_toBottomOf="@id/my_page_toast_check_email_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>