<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="8dp"
        app:shapeAppearanceOverlay="@style/BottomSheetRoundedCard"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/pushAlertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="앱 Push 알림 받기를 설정하시겠어요?"
                android:textSize="18sp"
                android:textColor="@color/black_400"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/pushAlertDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/popup_push_explain"
                android:textSize="15sp"
                android:textColor="@color/black_300"
                android:gravity="center"
                android:fontFamily="@font/pretendard_medium"
                android:lineSpacingExtra="2dp"/>

            <LinearLayout
                android:id="@+id/pushAlertButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/noButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_no"
                    android:textSize="16sp"
                    android:textColor="@color/black_300"
                    android:fontFamily="@font/pretendard_medium"
                    android:background="@drawable/btn_no"/>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/yesButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/btn_yes1"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_yes"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>