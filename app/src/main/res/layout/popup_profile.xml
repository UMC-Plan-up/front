<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
    android:id="@+id/photoOptionBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/selectFromGallery"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dropdown_profile_album"
            android:textSize="14sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="9dp"
            android:src="@drawable/ic_photo"
            app:tint="@color/black_300" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="3dp"
        android:paddingEnd="0dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dropdown_profile_camera"
            android:textSize="14sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_camera2"
            app:tint="@color/black_300" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectFile"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="3dp"
        android:paddingEnd="0dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dropdown_profile_file"
            android:textSize="14sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_file"
            app:tint="@color/black_300"/>
    </LinearLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>