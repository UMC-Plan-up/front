<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000"> <!-- 반투명 검정 배경 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/popup_goal_update_dialog">

        <!-- 닫기 버튼 (오른쪽 상단) -->
        <ImageView
            android:id="@+id/goal_update_close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:contentDescription="닫기" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/goal_update_title_tv"
            style="@style/Typography_L_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="목표 수정 안내"
            android:textColor="@color/black_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_update_close_btn" />

        <!-- 내용 -->
        <TextView
            android:id="@+id/goal_update_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[닉네임]님이 '목표명' 목표의 '파트명1', '파트명2'를 수정했어요."
            style="@style/Typography_SM_Medium"
            android:textColor="@color/black_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_update_title_tv"
            android:padding="8dp"/>

        <!-- 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goal_update_check_btn"
            style="@style/Typography_S_Semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rad6_rectangle"
            android:backgroundTint="@color/blue_200"
            android:text="목표 세부 내역 확인하기"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_update_desc_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
