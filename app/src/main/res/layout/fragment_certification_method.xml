<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/goalDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_detail"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/goalDetailSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_detail_description"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/goalDetailTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/authMethodTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_certification_method"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/goalDetailSubtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/authMethodDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/set_certification_method_notice"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/authMethodTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/timerAuthLayout"
        android:layout_width="310dp"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_picture_selected"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/authMethodDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/timerAuthIcon"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/ic_timer"
            android:layout_marginStart="25dp" />

        <LinearLayout
            android:id="@+id/timerAuthTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/timerAuthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/auth_timer"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400" />

            <TextView
                android:id="@+id/timerAuthDescription"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="@string/auth_timer_description"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pictureAuthLayout"
        android:layout_width="310dp"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_picture_selected"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/timerAuthLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/pictureAuthIcon"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/ic_picture"
            android:layout_marginStart="25dp" />

        <LinearLayout
            android:id="@+id/pictureAuthTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/pictureAuthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/auth_photo"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400" />

            <TextView
                android:id="@+id/pictureAuthDescription"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="@string/auth_photo_description"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>