<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/goal_select_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/goal_select_title_tv"
        style="@style/Typography_XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/goal_select_title"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_select_back_iv" />

    <TextView
        android:id="@+id/goal_select_together_tv"
        style="@style/Typography_XL_Medium"
        android:layout_width="320dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_goal_setting_selector"
        android:text="@string/goal_select_together"
        android:textColor="@color/black_400"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_select_title_tv"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_select_challenge_cl"
        android:layout_width="320dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_goal_setting_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_select_together_tv">

        <TextView
            android:id="@+id/goal_select_challenge_tv"
            style="@style/Typography_XL_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/goal_select_challenge"
            android:textAlignment="center"
            android:textColor="@color/black_400"
            app:layout_constraintBottom_toTopOf="@id/goal_select_penalty_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goal_select_penalty_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_select_challenge_explain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_select_challenge_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_category_cl"
        android:layout_width="307dp"
        android:layout_height="303dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/goal_select_challenge_cl"
        app:layout_constraintEnd_toEndOf="@id/goal_select_challenge_cl"
        android:visibility="gone">

        <TextView
            style="@style/Typography_L_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_setting"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/category_study_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_study"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_book_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_reading"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toEndOf="@id/category_study_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_meditation_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_meditation"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toEndOf="@id/category_book_tv"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/category_sleep_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_sleep"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_study_tv" />

        <TextView
            android:id="@+id/category_eat_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_diet"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toEndOf="@id/category_sleep_tv"
            app:layout_constraintTop_toBottomOf="@id/category_study_tv" />

        <TextView
            android:id="@+id/category_instrument_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="102dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_music"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_sleep_tv" />


        <TextView
            android:id="@+id/category_exercise_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:text="@string/community_category_exercise"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toEndOf="@id/category_instrument_tv"
            app:layout_constraintTop_toBottomOf="@id/category_sleep_tv" />


        <TextView
            android:id="@+id/category_diary_text"
            style="@style/Typography_SM_Medium"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/community_category_journal"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toEndOf="@id/category_exercise_tv"
            app:layout_constraintTop_toBottomOf="@id/category_sleep_tv" />


        <TextView
            android:id="@+id/category_custom_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_category_selector"
            android:gravity="center"
            android:text="@string/category_custom_option"
            android:textColor="@color/blue_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_instrument_tv" />


        <EditText
            android:id="@+id/custom_category_et"
            style="@style/Typography_SM_Medium"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_background1"
            android:hint="@string/category_cooking"
            android:textColor="@color/black_400"
            android:textColorHint="@color/black_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_custom_tv"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/category_error_tv"
            style="@style/Typography_XS_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_category_et" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black_300"
            app:layout_constraintEnd_toEndOf="@id/category_error_tv"
            app:layout_constraintStart_toStartOf="@id/category_error_tv"
            app:layout_constraintTop_toBottomOf="@id/category_error_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/goal_select_next_btn"
        style="@style/Typography_SM_Medium"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_next_background"
        android:gravity="center"
        android:text="@string/btn_next"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>