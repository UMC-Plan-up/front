<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/goal_select_back_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>


    <TextView
        android:id="@+id/goal_select_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/goal_select_title"
        style="@style/Typography_XL_Semibold"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/goal_select_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_setting_together_cl"
        android:layout_width="320dp"
        android:layout_height="82dp"
        android:background="@drawable/bg_goal_setting_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_select_title_tv"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/goal_setting_together_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_select_together"
            style="@style/Typography_XL_Medium"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goal_setting_challenge_cl"
        android:layout_width="320dp"
        android:layout_height="82dp"
        android:background="@drawable/bg_goal_setting_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_setting_together_cl"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/goal_select_challenge_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/goal_select_challenge"
            style="@style/Typography_XL_Medium"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/goal_select_challenge_explain_tv"/>
        <TextView
            android:id="@+id/goal_select_challenge_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_select_challenge_explain"
            style="@style/Typography_S_Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_select_challenge_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:id="@+id/goal_select_next_btn"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/white"
        android:background="@drawable/btn_next_background"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>