<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/edit_complete_back_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edit_complete_title_tv"
        android:layout_width="235dp"
        android:layout_height="33dp"
        android:text="목표 수정이 완료되었어요!"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/edit_complete_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp" />

    <ImageView
        android:id="@+id/edit_complete_image_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_complete"
        app:layout_constraintTop_toTopOf="@id/edit_complete_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="148dp" />

    <TextView
        android:id="@+id/edit_complete_notice_tv"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="친구들에게 목표 수정 알림이 전송됩니다."
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/blue_200"
        app:layout_constraintTop_toBottomOf="@id/edit_complete_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="329dp" />

    <TextView
        android:id="@+id/edit_complete_info_tv"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/edit_complete_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="357dp"
        android:text="함께 목표 달성 중인 친구들에게 목표가 수정되었음을 전달하는 알림이 전송되었어요." />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_complete_start_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/btn_complete"
        android:textSize="16sp"
        android:textColor="@color/black_300"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_start_planup"
        android:layout_marginTop="617dp"
        app:layout_constraintTop_toBottomOf="@id/edit_complete_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
