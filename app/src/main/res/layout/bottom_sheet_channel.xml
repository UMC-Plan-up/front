<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#484848">

    <LinearLayout
        android:id="@+id/bottomSheetShareChannel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="22dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="93dp"
            android:layout_height="27dp"
            android:text="공유하기"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="start" />

        <!-- 첫 번째 줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/shareMyChat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconMyChat"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textMyChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나와의채팅방"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareChat1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconChat1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textChat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카톡채팅1"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareChat2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconChat2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textChat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카톡채팅2"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 두 번째 줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/shareKakao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconKakao"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textKakao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카카오톡"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareInstagram"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconInstagram"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인스타그램"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/iconMessage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_bottomsheet_channel" />

                <TextView
                    android:id="@+id/textMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메시지"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
