<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/friendGoalTitleText"
        android:layout_width="286dp"
        android:layout_height="33dp"
        android:text="친구 님의 세부 목표"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/friendGoalDescriptionText"
        android:layout_width="286dp"
        android:layout_height="21dp"
        android:text="친구가 설정한 세부 목표를 그대로 적용할 수 있어요."
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/goalNameLabel"
        android:layout_width="311dp"
        android:layout_height="27dp"
        android:text="목표명"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="109dp" />

    <EditText
        android:id="@+id/nicknameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="토익 공부"
        android:textSize="16sp"
        android:background="@drawable/bg_edittext_rounded"
        android:padding="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="144dp"
        android:textColorHint="@color/black_300"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/goalNameMinLengthHint"
        android:layout_width="133dp"
        android:layout_height="15dp"
        android:text="1글자 이상 작성해 주세요."
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="192dp" />

    <TextView
        android:id="@+id/goalNameMaxLengthHint"
        android:layout_width="133dp"
        android:layout_height="15dp"
        android:text="20자 이내로 작성해 주세요."
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#4B5563"
        app:layout_constraintTop_toBottomOf="@id/goalNameMinLengthHint"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/goalVolumeLabel"
        android:layout_width="306dp"
        android:layout_height="27dp"
        android:text="1회 분량"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="244dp" />

    <EditText
        android:id="@+id/goalVolumeEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="토익 교재 1챕터씩 공부하기"
        android:textSize="16sp"
        android:background="@drawable/bg_edittext_rounded"
        android:padding="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="279dp"
        android:textColorHint="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/goalVolumeMinLengthHint"
        android:layout_width="133dp"
        android:layout_height="15dp"
        android:text="1글자 이상 작성해 주세요."
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="327dp" />

    <TextView
        android:id="@+id/goalVolumeMaxLengthHint"
        android:layout_width="133dp"
        android:layout_height="15dp"
        android:text="30자 이내로 작성해 주세요."
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/goalVolumeMinLengthHint"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="617dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>