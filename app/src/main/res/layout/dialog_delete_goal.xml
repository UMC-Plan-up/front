<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_goal_adapter"> <!-- 반투명 배경 -->

    <!-- 제목 -->
    <TextView
        android:id="@+id/popup_unblock_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="목표를 삭제하시겠어요?"
        android:textAlignment="center"
        android:textColor="#1A1A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 설명 -->
    <TextView
        android:id="@+id/popup_block_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="4dp"
        android:text="지금 목표를 삭제하면, 친구와 남긴 댓글, 반응, 데이와 참여자 랭킹 기록이 사라져요. 그래도 삭제하시겠어요?"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_unblock_title_tv" />

    <!-- 버튼 영역 -->

    <TextView
        android:id="@+id/popup_delete_goal_no_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_btn_transparent"
        android:gravity="center"
        android:text="@string/btn_no"
        android:textColor="@color/black_300"
        app:layout_constraintEnd_toStartOf="@id/popup_delete_goal_yes_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_block_description_tv" />

    <TextView
        android:id="@+id/popup_delete_goal_yes_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_blue"
        android:gravity="center"
        android:text="@string/btn_yes1"
        android:textColor="@color/white_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/popup_delete_goal_no_btn"
        app:layout_constraintTop_toBottomOf="@id/popup_block_description_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>