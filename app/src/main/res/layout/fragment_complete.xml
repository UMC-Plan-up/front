<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/goalCompleteTitle"
        android:layout_width="235dp"
        android:layout_height="33dp"
        android:text="목표 설정이 완료되었어요!"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp" />


    <ImageView
        android:id="@+id/goalCompleteImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_complete"
        app:layout_constraintTop_toTopOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="148dp" />


    <TextView
        android:id="@+id/goalShareNoticeText"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="친구들에게 내 목표가 공개됩니다!"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/blue_200"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="329dp" />

    <TextView
        android:id="@+id/goalInfoText"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="357dp"
        android:text="플랜업애서 설정한 목표들은 기본적으로 친구와 공유됩니다. 목표 공유 설정은 추후에도 ‘목표’ 탭에서 변경 가능해요!" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startPlanUpButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Plan-Up 사용 시작하기"
        android:textSize="16sp"
        android:textColor="@color/black_300"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_start_planup"
        android:layout_marginTop="617dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>