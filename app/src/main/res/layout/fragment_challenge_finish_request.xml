<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_finish_request_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challenge_finish_request_inner_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/challenge_finish_request_title_tv"
                style="@style/Typography_2XL_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_finish_request_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp"/>
            <ImageView
                android:id="@+id/challenge_finish_request_iv"
                android:layout_width="148dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_fireworks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_finish_request_title_tv"
                android:layout_marginTop="55dp"/>

            <TextView
                android:id="@+id/challenge_finish_request_subtitle_tv"
                style="@style/Typography_SM_Semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge_finish_request_subtitle"
                android:textColor="@color/blue_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_finish_request_iv"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="65dp"/>
            <TextView
                android:id="@+id/challenge_finish_request_content_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge_finish_request_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_finish_request_subtitle_tv"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/challenge_finish_complete_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/btn_yes_checked"
                android:textColor="@color/black_300"
                style="@style/Typography_SM_Medium"
                android:background="@drawable/bg_btn_transparent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/challenge_finish_request_content_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="261dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>