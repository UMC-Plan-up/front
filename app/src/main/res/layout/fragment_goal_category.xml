<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="28dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="33dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIcon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goalSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_select_title"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/communityGoalLayout"
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:orientation="vertical"
                android:background="@drawable/bg_goal_black"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/goalSettingTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/communityGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/goal_select_together"
                    android:textSize="18sp"
                    android:textColor="@color/black_400"
                    android:fontFamily="@font/pretendard_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/challengeGoalLayout"
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/bg_goal_black"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/communityGoalLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/challengeGoalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_select_challenge"
                    android:textSize="18sp"
                    android:textColor="@color/black_400"
                    android:fontFamily="@font/pretendard_medium" />


                <TextView
                    android:id="@+id/challengeGoalSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_select_challenge_explain"
                    android:textSize="14sp"
                    android:textColor="@color/black_300"
                    android:fontFamily="@font/pretendard_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/categorySettingTitle"
                android:layout_width="99dp"
                android:layout_height="27dp"
                android:text="@string/category_setting"
                android:textSize="18dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_400"
                app:layout_constraintTop_toBottomOf="@id/challengeGoalLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />
            <LinearLayout
                android:id="@+id/categoryCustomLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/categorySettingTitle"
                app:layout_constraintStart_toStartOf="parent">

                <include layout="@layout/item_category_list" />

            </LinearLayout>

            <EditText
                android:id="@+id/customCategoryEditText"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="@string/category_cooking"
                android:textColorHint="@color/black_300"
                android:textColor="@color/black_300"
                android:fontFamily="@font/pretendard_medium"
                android:paddingStart="12dp"
                android:background="@drawable/bg_edittext_background1"
                app:layout_constraintTop_toBottomOf="@id/categoryCustomLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/categoryGuideText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_category1"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_300"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customCategoryEditText" />

            <TextView
                android:id="@+id/categoryGuideText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_category2"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_300"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoryGuideText1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>