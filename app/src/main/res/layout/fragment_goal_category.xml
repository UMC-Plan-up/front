<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/goalSettingTitle"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="@string/goal_select_title"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp" />

    <LinearLayout
        android:id="@+id/communityGoalLayout"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:orientation="vertical"
        android:background="@drawable/bg_goal_black"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="77dp" >

        <TextView
            android:id="@+id/communityGoalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/goal_select_together"
            android:textSize="18sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/challengeGoalLayout"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_goal_black"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="179dp">

        <TextView
            android:id="@+id/challengeGoalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_select_challenge"
            android:textSize="18sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />


        <TextView
            android:id="@+id/challengeGoalSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_select_challenge_explain"
            android:textSize="14sp"
            android:textColor="@color/black_300"
            android:fontFamily="@font/pretendard_medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/categorySettingTitle"
        android:layout_width="99dp"
        android:layout_height="27dp"
        android:text="@string/category_setting"
        android:textSize="18dp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="293dp" />

    <LinearLayout
        android:id="@+id/categoryStudyLayout"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryStudyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_study"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryReadingLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="81dp">

        <TextView
            android:id="@+id/categoryReadingText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_reading"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryDigitalDetoxLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/categoryDigitalDetoxText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_meditation"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryMeditationLayout"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="378dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryMeditationText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_sleep"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categorySleepLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="378dp"
        android:layout_marginStart="117dp">

        <TextView
            android:id="@+id/category_sleep_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_diet"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryInstrumentLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryInstrumentText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_music"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryExerciseLayout"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="99dp">

        <TextView
            android:id="@+id/categoryExerciseText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_exercise"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryDiaryLayout"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/categoryDiaryText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/community_category_journal"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryCustomLayout"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="482dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/category_custom_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/category_custom_option"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <EditText
        android:id="@+id/customCategoryEditText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:hint="@string/category_cooking"
        android:textColorHint="@color/black_300"
        android:fontFamily="@font/pretendard_medium"
        android:paddingStart="12dp"
        android:background="@drawable/bg_edittext_background1"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="538dp"
        android:layout_marginStart="5dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="632dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/categoryGuideText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_category1"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="6dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customCategoryEditText" />

    <TextView
        android:id="@+id/categoryGuideText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_category2"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryGuideText1" />


</androidx.constraintlayout.widget.ConstraintLayout>