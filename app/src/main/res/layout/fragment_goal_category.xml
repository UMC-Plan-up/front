<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/goalSettingTitle"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="목표 설정하기"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp" />


    <LinearLayout
        android:id="@+id/communityGoalLayout"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:orientation="vertical"
        android:background="@drawable/bg_goal_black"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="77dp" >

        <TextView
            android:id="@+id/communityGoalText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="친구/커뮤니티와 함께 목표 설정하기"
            android:textSize="20sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/challengeGoalLayout"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_goal_black"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="179dp">

        <TextView
            android:id="@+id/challengeGoalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구와 1:1 챌린지 도전하기"
            android:textSize="20sp"
            android:textColor="@color/black_400"
            android:fontFamily="@font/pretendard_medium" />


        <TextView
            android:id="@+id/challengeGoalSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구와 패널티를 걸고 도전해 보세요!"
            android:textSize="14sp"
            android:textColor="@color/black_300"
            android:fontFamily="@font/pretendard_medium" />
    </LinearLayout>


    <TextView
        android:id="@+id/categorySettingTitle"
        android:layout_width="99dp"
        android:layout_height="27dp"
        android:text="카테고리 설정"
        android:textSize="18dp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="293dp" />


    <LinearLayout
        android:id="@+id/categoryStudyLayout"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryStudyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="공부하기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/categoryReadingLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="81dp">

        <TextView
            android:id="@+id/categoryReadingText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="독서하기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryDigitalDetoxLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="326dp"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/categoryDigitalDetoxText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="명상하기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryMeditationLayout"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="378dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryMeditationText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="수면 패턴 관리"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categorySleepLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="378dp"
        android:layout_marginStart="117dp">

        <TextView
            android:id="@+id/categorySleepText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="식습관 관리"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryInstrumentLayout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryInstrumentText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="악기 배우기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryExerciseLayout"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="99dp">

        <TextView
            android:id="@+id/categoryExerciseText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="운동하기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryDiaryLayout"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/categoryDiaryText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="일기 쓰기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryCustomLayout"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_category_white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="482dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/categoryCustomText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="직접 설정하기"
            android:textSize="16sp"
            android:textColor="#448AF7"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <EditText
        android:id="@+id/customCategoryEditText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:hint="요리하기"
        android:textColorHint="@color/black_300"
        android:fontFamily="@font/pretendard_medium"
        android:paddingStart="12dp"
        android:background="@drawable/bg_edittext_background1"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="538dp"
        android:layout_marginStart="5dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="632dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/categoryGuideText1"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:text="@string/setting_category1"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:textSize="12sp"
        android:layout_marginTop="582dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIcon" />

    <TextView
        android:id="@+id/categoryGuideText2"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:text="@string/setting_category2"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:textSize="12sp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>