<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg_item_goal_list_rv">

    <!-- 원형 프로그레스바 -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/goal_list_rv_pc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/goal_list_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="헬스장 가기"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/goal_list_rv_pc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/goal_edit_icon"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <!-- 설명 -->
    <TextView
        android:id="@+id/goal_list_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="매일 30분 이상"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/goal_list_title_tv"
        app:layout_constraintTop_toBottomOf="@id/goal_list_title_tv"
        app:layout_constraintEnd_toEndOf="@id/goal_list_title_tv"
        android:layout_marginTop="4dp" />

    <!-- 버튼 묶음 -->
    <LinearLayout
        android:id="@+id/goal_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/goal_list_description_tv"
        app:layout_constraintStart_toStartOf="@id/goal_list_description_tv">

        <TextView
            android:id="@+id/goal_delete_btn"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:text="삭제하기"
            android:padding="3dp"
            android:textColor="@color/red_300"
            android:background="@drawable/bg_delete_button"
            android:gravity="center"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/goal_toggle_btn"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:text="비활성화하기"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_toggle_button"
            android:padding="3dp"
            android:textColor="@color/blue_300"
            android:gravity="center"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- 수정 아이콘 -->
    <ImageView
        android:id="@+id/goal_edit_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit_black"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>