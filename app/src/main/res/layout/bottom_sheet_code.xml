<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetCode"
    android:layout_width="308dp"
    android:layout_height="296dp"
    android:background="@drawable/bg_bottomsheet_round"
    android:orientation="vertical"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:gravity="start">

        <TextView
            android:id="@+id/friendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 친구"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/friendDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="____님과 친구가 되었어요!"
            android:textSize="16sp"
            android:textColor="#5A5A5A" />
    </LinearLayout>

    <ImageView
        android:id="@+id/giftImage"
        android:layout_width="118dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_gift"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:minWidth="57dp"
        android:paddingLeft="25dp"
        android:paddingRight="21dp"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:background="@drawable/btn_confirm" />
</LinearLayout>
