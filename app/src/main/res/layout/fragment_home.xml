<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/home_dummy_v"
            android:layout_width="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="1dp"
            android:visibility="invisible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_alarm_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:id="@+id/home_alarm_none_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/emoji_bell"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/home_alarm_exist_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_alarm2"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="82dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_main_profile_iv"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/bg_circle"/>

                <TextView
                    android:id="@+id/home_main_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/home_main_text"
                    style="@style/Typography_XL_Semibold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_to_do_list"
                    style="@style/Typography_L_Semibold"/>

                <ImageView
                    android:id="@+id/home_arrow_dailytodo_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:rotation="180"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daily_todo_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ProgressBar
            android:id="@+id/daily_todo_pb"
            style="@style/DailyToDoProgressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#5383E3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_todo_rv" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/daily_todo_pb">

            <TextView
                android:id="@+id/textView5"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_with_friends" />

            <ImageView
                android:id="@+id/home_arrow_friendgoallist_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:rotation="180"
                app:srcCompat="@drawable/ic_arrow_back" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_friend_challenge_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/home_calendar_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@android:color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/home_friend_challenge_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_calendar_cl"
                android:background="@drawable/bg_rad6_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 상단 년/월 텍스트 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_calendar_top_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/home_monthYearText"
                        style="@style/Typography_S_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="January 2025"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_calendar_arrow_next_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_calendar_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_calendar_arrow_prev_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/ic_calendar_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/home_calendar_arrow_next_iv"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 구분선 -->
                <View
                    android:id="@+id/home_calendar_v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/neutral_blueblack_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_calendar_top_ll" />

                <!-- 요일 헤더 -->
                <LinearLayout
                    android:id="@+id/home_calendar_head_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_calendar_v1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Mon"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tue"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Wed"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Thu"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fri"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sat"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>

                    <TextView
                        style="@style/Typography_SM_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sun"
                        android:textColor="#7E818C"
                        android:textSize="10sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <!-- 달력 뷰 -->
                <com.kizitonwose.calendar.view.CalendarView
                    android:id="@+id/home_calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:cv_dayViewResource="@layout/item_calendar_day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_calendar_head_ll" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <ImageView
        android:id="@+id/home_fab"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_calendar_timer"
        android:background="@drawable/bg_calendar_fab"
        android:padding="13dp"
        android:elevation="6dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"/>

</FrameLayout>