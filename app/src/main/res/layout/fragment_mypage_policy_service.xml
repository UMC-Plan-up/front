<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/policy_service_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="@id/policy_service_back_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/policy_service_back_tv" />

    <TextView
        android:id="@+id/policy_service_back_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="목록"
        app:layout_constraintStart_toEndOf="@id/policy_service_back_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/policy_service_title_tv"
        style="@style/TextAppearance.Pretendard.SemiBold.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="서비스 이용 약관"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/policy_service_back_tv" />

    <TextView
        android:id="@+id/policy_service_content_tv"
        style="@style/TextAppearance.Pretendard.Medium.SM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/service_policy"
        app:layout_constraintTop_toBottomOf="@id/policy_service_back_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>