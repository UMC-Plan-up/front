<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/challenge_photo_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/back_iv"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challenge_photo_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/challenge_photo_title_tv"
                style="@style/Typography_2XL_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/challenge_request_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/challenge_photo_goal_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/goal_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_title_tv"/>

            <TextView
                android:id="@+id/challenge_photo_goal_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_goal_tv" />

            <TextView
                android:id="@+id/challenge_photo_amount_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/amount_once"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_goal_enter_tv" />

            <TextView
                android:id="@+id/challenge_photo_amount_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request"
                android:text=""
                android:textColorHint="@color/semanticB4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_amount_tv" />

            <TextView
                android:id="@+id/challenge_photo_verify_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_amount_enter_tv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_photo_verify_enter_cl"
                android:layout_width="331dp"
                android:layout_height="67dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_verify_tv">

                <ImageView
                    android:id="@+id/challenge_photo_verify_enter_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_picture"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_photo_verify_enter_tv"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/challenge_photo_method"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_photo_verify_enter_iv"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/challenge_photo_number_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/challenge_photo_certify_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_verify_enter_cl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_photo_number_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_number_tv">

                <TextView
                    android:id="@+id/challenge_photo_number_enter_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="51dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_challenge_request_time"
                    android:text=""
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/Typography_SM_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/challenge_photo_number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_photo_number_enter_tv"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/challenge_photo_due_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/finish_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_number_cl" />

            <TextView
                android:id="@+id/challenge_photo_due_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_due_tv" />

            <TextView
                android:id="@+id/challenge_photo_duration_title_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_due_enter_tv" />

            <TextView
                android:id="@+id/challenge_photo_duration_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_time"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_duration_title_tv" />

            <TextView
                android:id="@+id/challenge_photo_duration_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/day"
                app:layout_constraintBottom_toBottomOf="@id/challenge_photo_duration_enter_tv"
                app:layout_constraintStart_toEndOf="@id/challenge_photo_duration_enter_tv"
                app:layout_constraintTop_toTopOf="@id/challenge_photo_duration_enter_tv" />

            <TextView
                android:id="@+id/challenge_photo_frequency_title_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/often"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_duration_enter_tv" />

            <TextView
                android:id="@+id/challenge_photo_frequency_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_often"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_frequency_title_tv" />

            <TextView
                android:id="@+id/challenge_photo_often_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/minimum_number"
                app:layout_constraintBottom_toBottomOf="@id/challenge_photo_frequency_enter_tv"
                app:layout_constraintStart_toEndOf="@id/challenge_photo_frequency_enter_tv"
                app:layout_constraintTop_toTopOf="@id/challenge_photo_frequency_enter_tv" />

            <TextView
                android:id="@+id/challenge_photo_penalty_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/penalty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_often_tv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_photo_penalty_cl"
                android:layout_width="327dp"
                android:layout_height="67dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_penalty_tv">

                <ImageView
                    android:id="@+id/challenge_photo_penalty_enter_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_coffee2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_photo_penalty_enter_tv"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_photo_penalty_enter_iv"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_reject_tv"
                style="@style/Typography_S_Semibold"
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:text="@string/btn_reject"
                android:textColor="@color/blue_300"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_decline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_penalty_cl" />

            <TextView
                android:id="@+id/btn_accept_tv"
                style="@style/Typography_S_Semibold"
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:text="@string/btn_approve"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_allow"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/btn_reject_tv"
                app:layout_constraintTop_toBottomOf="@id/challenge_photo_penalty_cl" />

            <TextView
                android:id="@+id/btn_ask_new_penalty_tv"
                style="@style/Typography_S_Semibold"
                android:layout_width="320dp"
                android:layout_height="37dp"
                android:text="@string/btn_ask_new_penalty"
                android:textColor="@color/blue_300"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_offer"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="168dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_accept_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
