<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/edit_timer_back_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edit_timer_head_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구와 함께하는 세부 목표 수정"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_back_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        style="@style/Typography_S_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 수정 시, 참여 중인 친구들의 목표도 변경돼요."
        android:textColor="@color/black_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_head_tv" />

    <TextView
        android:id="@+id/edit_timer_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/challenge_request_time"
        android:textColor="@color/black_400"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/edit_timer_desc_tv"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/timer_ask"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/edit_timer_spinner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_timer_desc_tv">

        <Spinner
            android:id="@+id/edit_timer_hour_spinner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_timer_spinner"
            android:layout_marginEnd="4dp" />

        <Spinner
            android:id="@+id/edit_timer_minute_spinner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_timer_spinner"
            android:layout_marginEnd="4dp"/>

        <Spinner
            android:id="@+id/edit_timer_second_spinner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_timer_spinner"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_timer_picker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_desc_tv"
        app:layout_constraintStart_toStartOf="parent">

        <NumberPicker
            android:id="@+id/edit_timer_hour_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <NumberPicker
            android:id="@+id/edit_timer_minute_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <NumberPicker
            android:id="@+id/edit_timer_second_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/edit_timer_warning_tv"
        android:layout_width="123dp"
        android:layout_height="18dp"
        android:text="@string/error_more_thirty_second"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#F81E1E"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_spinner_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_timer_next_btn"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background_gray"
        android:layout_marginTop="617dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/edit_timer_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
