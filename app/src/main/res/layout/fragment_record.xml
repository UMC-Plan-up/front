<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/challenge_main_alert_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emoji_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/challenge_main_title_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_alert_iv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/challenge_main_profile_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:id="@+id/challenge_main_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_example"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/challenge_main_title_tv"
            style="@style/TextAppearance.Pretendard.SemiBold.XL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 님, 벌써 이만큼이나 왔어요!"
            app:layout_constraintStart_toEndOf="@id/challenge_main_profile_cv"
            app:layout_constraintTop_toTopOf="@id/challenge_main_profile_cv"
            app:layout_constraintBottom_toBottomOf="@id/challenge_main_profile_cv"
            android:layout_marginStart="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/challenge_main_todo_tv"
        style="@style/TextAppearance.Pretendard.SemiBold.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily To-Do List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_title_cl"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp" />
    <ImageView
        android:id="@+id/challenge_main_todo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ep_arrow_up"
        app:layout_constraintStart_toEndOf="@id/challenge_main_todo_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_main_todo_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_main_todo_tv"/>


    <!-- listItem에 달성률 그래프 추가해야 함 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_main_graph_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_todo_tv"
        tools:listitem=""
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="14dp">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/challenge_main_progress_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/progress_1"
        app:layout_constraintStart_toStartOf="@id/challenge_main_graph_sv"
        app:layout_constraintEnd_toEndOf="@id/challenge_main_graph_sv"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_graph_sv"/>
    <TextView
        android:id="@+id/challenge_main_friend_title_tv"
        style="@style/TextAppearance.Pretendard.SemiBold.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="함께 도전 중인 친구들은?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_graph_sv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"/>
    <ImageView
        android:id="@+id/challenge_main_friend_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ep_arrow_up"
        app:layout_constraintStart_toEndOf="@id/challenge_main_friend_title_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_main_friend_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_main_friend_title_tv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/challenge_main_friend_progress_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_friend_title_tv"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <CalendarView
        android:id="@+id/challenge_main_calendar_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/challenge_main_friend_progress_sv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:elevation="8dp"/>

    <ImageView
        android:id="@+id/challenge_main_timer_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emoji_timer"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@id/challenge_main_calendar_cv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_main_calendar_cv"/>
</androidx.constraintlayout.widget.ConstraintLayout>