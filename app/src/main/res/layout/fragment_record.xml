<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 달성"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 리포트"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- 연도, 월 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년 ▼"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5월 ▼"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 주차 리포트 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- 선택된 버튼 예시 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="12dp"
                android:gravity="center"
                android:text="1주차\n리포트"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:textAlignment="center" />

            <!-- 나머지 버튼 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="12dp"
                android:gravity="center"
                android:text="2주차\n리포트"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:textAlignment="center" />

            <!-- 3~5주차 생략 가능 -->
        </LinearLayout>

        <!-- 배지 기록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="나의 배지 기록"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_badge1"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_badge2"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_badge3" />
        </LinearLayout>

        <!-- 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="알림"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 친구 1 님의 댓글 ‘뿔써 이만큼 함?’"
            android:layout_marginTop="12dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 친구 2 님이 ‘응원해요’ 버튼을 눌렀습니다."
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <!-- AI 응원 메시지 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="그린 님을 위한\n플랜업의 AI 응원 메시지"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/img_planup_logo"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Plan-Up"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이번 주 목표 달성량이 지난주에 비해서..."
                android:textSize="14sp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>