<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="178dp"
    app:layout_constraintCircleRadius="6dp"
    android:background="@drawable/bg_popup_password">
    <TextView
        android:id="@+id/popup_password_title_tv"
        style="@style/Typography_L_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_password_changed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_password_sub_tv"
        style="@style/TextAppearance.Pretendard.Medium.S"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/popup_password_explain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_password_title_tv" />

    <TextView
        android:id="@+id/popup_password_reset_btn"
        android:layout_width="92dp"
        android:layout_height="44dp"
        android:text="@string/btn_ok"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_blue"
        app:layout_constraintTop_toBottomOf="@id/popup_password_sub_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19dp" />
</androidx.constraintlayout.widget.ConstraintLayout>