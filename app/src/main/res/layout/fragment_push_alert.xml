<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/alertBackIv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationTitleText"
        style="@style/Typography_XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_alert_title"
        android:textColor="@color/black_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/alert_alarm_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:src="@drawable/emoji_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertBackIv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alert_receive_cl"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/bg_alert_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertBackIv">

        <TextView
            style="@style/Typography_SM_Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/setting_alert_receive"
            android:textAlignment="center"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alert_receive_toggle_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/alert_receive_on_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_toggle_on"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/alert_receive_off_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_toggle_off"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black_200"
        app:layout_constraintEnd_toEndOf="@id/alert_receive_cl"
        app:layout_constraintStart_toStartOf="@id/alert_receive_cl"
        app:layout_constraintTop_toBottomOf="@id/alert_receive_cl" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alert_set_regular_cl"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_alert_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_receive_cl">

        <TextView
            style="@style/Typography_SM_Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/setting_alert_regular"
            android:textAlignment="center"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alert_regular_toggle_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/alert_regular_on_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_toggle_on"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/alert_regular_off_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_toggle_off"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alert_time_cl"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_timer_dropdown"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/alert_day_cl"
        app:layout_constraintStart_toStartOf="@id/alert_day_cl">

        <TextView
            android:id="@+id/alert_morning_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="@string/morning"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alert_afternoon_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/afternoon"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/alert_morning_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alert_hour_rv"
        android:layout_width="60dp"
        android:layout_height="219dp"
        android:layout_marginStart="66dp"
        android:background="@drawable/bg_timer_dropdown"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/alert_day_cl"
        app:layout_constraintStart_toStartOf="@id/alert_day_cl" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alert_minute_rv"
        android:layout_width="60dp"
        android:layout_height="219dp"
        android:layout_marginStart="132dp"
        android:background="@drawable/bg_timer_dropdown"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/alert_day_cl"
        app:layout_constraintStart_toStartOf="@id/alert_day_cl" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alert_day_cl"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_set_regular_cl">

        <TextView
            android:id="@+id/alert_time_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_timer_setting"
            android:gravity="center_vertical|start"
            android:text="@string/morning"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_arrow_up_14"
            app:layout_constraintBottom_toBottomOf="@id/alert_time_tv"
            app:layout_constraintEnd_toEndOf="@id/alert_time_tv"
            app:layout_constraintTop_toTopOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_hour_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_timer_setting"
            android:gravity="center_vertical|start"
            android:text="@string/hour"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_time_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_arrow_up_14"
            app:layout_constraintBottom_toBottomOf="@id/alert_hour_tv"
            app:layout_constraintEnd_toEndOf="@id/alert_hour_tv"
            app:layout_constraintTop_toTopOf="@id/alert_hour_tv" />

        <TextView
            android:id="@+id/alert_minute_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_timer_setting"
            android:gravity="center_vertical|start"
            android:text="@string/minute"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_hour_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_arrow_up_14"
            app:layout_constraintBottom_toBottomOf="@id/alert_minute_tv"
            app:layout_constraintEnd_toEndOf="@id/alert_minute_tv"
            app:layout_constraintTop_toTopOf="@id/alert_minute_tv" />

        <TextView
            android:id="@+id/alert_everyday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/everyday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_monday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/monday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_everyday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_tuesday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/tuesday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_monday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_wednesday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/wednesday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_tuesday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_thursday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/thursday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_wednesday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_friday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/friday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_thursday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_saturday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/saturday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_friday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />

        <TextView
            android:id="@+id/alert_sunday_tv"
            style="@style/Typography_S_Medium"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_alert_day_selector"
            android:gravity="center"
            android:text="@string/sunday"
            android:textAlignment="center"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/alert_saturday_tv"
            app:layout_constraintTop_toBottomOf="@id/alert_time_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_next_background"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:text="@string/btn_save"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>