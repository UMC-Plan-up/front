<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_goal_adapter"> <!-- 반투명 배경 -->

            <!-- 제목 -->
            <TextView
                android:id="@+id/popup_unblock_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표를 비활성화하시겠어요?"
                android:textColor="@color/black_400"
                style="@style/Typography_L_Medium"
                android:gravity="center"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 설명 -->
            <TextView
                android:id="@+id/popup_block_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="지금 목표를 비활성화하면, 지금까지의 기록은 저장되나, 더 이상 목표 달성 기록을 추가로 입력할 수 없어요. 그래도 비활성화하시겠어요?"
                android:textColor="@color/black_300"
                style="@style/Typography_S_Medium"
                app:layout_constraintTop_toBottomOf="@id/popup_unblock_title_tv" />

            <!-- 버튼 영역 -->

                <TextView
                    android:id="@+id/popup_inactivate_goal_no_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/popup_inactivate_goal_yes_btn"
                    app:layout_constraintTop_toBottomOf="@id/popup_block_description_tv"
                    android:layout_marginTop="20dp"
                    android:text="@string/btn_no"
                    android:background="@drawable/bg_btn_transparent"
                    style="@style/Typography_SM_Medium"
                    android:textColor="@color/black_300"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"/>

               <TextView
                   android:id="@+id/popup_inactivate_goal_yes_btn"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/popup_inactivate_goal_no_btn"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/popup_block_description_tv"
                   android:layout_marginTop="20dp"
                   android:text="@string/btn_yes1"
                   style="@style/Typography_SM_Medium"
                   android:textColor="@color/white_font"
                   android:background="@drawable/bg_btn_blue"
                   android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>