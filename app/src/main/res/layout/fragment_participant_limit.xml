<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="28dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/friendGoalTitleText"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_detail"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backIcon"
        android:layout_marginTop="31dp"/>

    <TextView
        android:id="@+id/friendGoalDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/goal_friend_detail_description"
        android:textColor="@color/black_300"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friendGoalTitleText" />

    <TextView
        android:id="@+id/participantLimitTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participant_limit"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/friendGoalDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/participantLimitDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_participation_question"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/participantLimitTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/participantLimitInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/participantLimitDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp">

        <EditText
            android:id="@+id/participantLimitEditText"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:textSize="12sp"
            android:background="@drawable/bg_timer_setting"
            android:padding="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#737373"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/participantLimitUnitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ëª…"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_400"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/participantLimitErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_participation_hint"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/participantLimitInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/passwordNotFoundErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/participantLimitInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_next_background"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>