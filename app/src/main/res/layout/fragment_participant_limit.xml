<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/friendGoalTitleText"
        android:layout_width="286dp"
        android:layout_height="33dp"
        android:text="친구 님의 세부 목표"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp" />


    <TextView
        android:id="@+id/friendGoalDescriptionText"
        android:layout_width="295dp"
        android:layout_height="21dp"
        android:text="친구가 설정한 세부 목표를 그대로 적용할 수 있어요."
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/participantLimitTitleText"
        android:layout_width="297dp"
        android:layout_height="27dp"
        android:text="참여자 수 제한"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="109dp" />

    <TextView
        android:id="@+id/participantLimitDescriptionText"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:text="기준 기간 내에 목표를 실행할 횟수를 입력하세요."
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/participantLimitInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="165dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/participantLimitEditText"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:hint="3"
            android:textSize="12sp"
            android:background="@drawable/bg_timer_setting"
            android:padding="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#737373"
            android:textColorHint="#737373"
            android:layout_marginEnd="5dp" />


        <TextView
            android:id="@+id/participantLimitUnitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회 이상"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_400"
            android:gravity="center_vertical"/>
    </LinearLayout>


    <TextView
        android:id="@+id/participantLimitErrorText"
        android:layout_width="148dp"
        android:layout_height="18dp"
        android:text="1 이상의 숫자를 입력해 주세요."
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="198dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="617dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>