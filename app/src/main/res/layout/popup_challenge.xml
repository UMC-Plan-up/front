
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/popup_challenge_cv"
        android:layout_width="300dp"
        android:layout_height="231dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/popup_challenge_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_emoji"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="13dp"/>
            <TextView
                android:id="@+id/popup_challenge_title_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_challenge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_challenge_close_iv"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/popup_challenge_notice_tv"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                style="@style/Typography_SM_Medium"
                android:text="@string/popup_challenge_request"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_challenge_title_tv"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"/>
            
            <TextView
                android:id="@+id/popup_challenge_btn"
                android:layout_width="260dp"
                android:layout_height="37dp"
                android:text="@string/btn_go_to_check"
                style="@style/Typography_S_Semibold"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_blue"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popup_challenge_notice_tv"
                android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>