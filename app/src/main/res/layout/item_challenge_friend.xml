<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="312dp"
    android:layout_height="52dp"
    android:background="@drawable/bg_challenge_friend_selector">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/challenge_friend_profile_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/challenge_friend_profile_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_example_2" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/challenge_friend_name_tv"
        style="@style/Typography_SM_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toEndOf="@id/challenge_friend_profile_rv"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/challenge_friend_goal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_300"
        app:layout_constraintStart_toStartOf="@id/challenge_friend_name_tv"
        app:layout_constraintTop_toBottomOf="@id/challenge_friend_name_tv"
        android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>