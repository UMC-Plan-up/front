<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/password_first_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/password_first_back_tv"
        app:layout_constraintBottom_toBottomOf="@id/password_first_back_tv"/>

    <TextView
        android:id="@+id/password_first_back_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록"
        app:layout_constraintStart_toEndOf="@id/password_first_back_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/password_first_title_tv"
        style="@style/TextAppearance.Pretendard.Medium.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="비밀번호 변경"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_first_back_tv" />

    <TextView
        android:id="@+id/my_password_explain_tv"
        style="@style/TextAppearance.Pretendard.Medium.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입한 이메일 주소를 입력해 주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_first_title_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/password_email_et"
        android:layout_width="320dp"
        android:layout_height="44dp"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_300"
        android:hint="이메일 주소를 입력하세요"
        android:background="@drawable/bg_edittext_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_first_title_tv"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/password_email_dropdown_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_email"
        app:layout_constraintEnd_toEndOf="@id/password_email_et"
        app:layout_constraintTop_toTopOf="@id/password_email_et"
        app:layout_constraintBottom_toBottomOf="@id/password_email_et"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/btn_password_link_tv"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:text="@string/btn_get_link"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/bg_btn_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
