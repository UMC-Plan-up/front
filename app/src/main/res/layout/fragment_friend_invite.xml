<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container_invite_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 상단 타이틀 -->
        <LinearLayout
            android:id="@+id/section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/tv_title_category"
                style="@style/Typography_2XL_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="카테고리 설정"
                android:textColor="@color/black_400" />
        </LinearLayout>

        <!-- 친구 초대 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invite_title"
                style="@style/Typography_2XL_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 초대"
                android:textColor="@color/black_400" />

            <TextView
                android:id="@+id/tv_invite_subtitle"
                style="@style/Typography_L_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 친구를 초대하세요!"
                android:textColor="@color/black_400" />

        </LinearLayout>

        <!-- 나의 초대 코드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_invite_code_title"
                style="@style/Typography_L_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 초대 코드"
                android:textColor="@color/black_400" />

            <TextView
                android:id="@+id/tv_my_invite_code_desc"
                style="@style/Typography_S_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구에게 공유해 보세요"
                android:textColor="@color/black_400" />

            <LinearLayout
                android:id="@+id/container_my_invite_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/row_my_invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/invite_friend_et"
                        style="@style/Typography_SM_Medium"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:background="@drawable/bg_edittext"
                        android:hint="나의초대코드"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:id="@+id/btn_copy_invite_code"
                        style="@style/Typography_SM_Medium"
                        android:layout_width="73dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_edittext"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="복사"
                        android:textColor="@color/black_400" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_upload"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_button_default"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="공유"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
        <!-- 초대코드 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_enter_code_title"
                style="@style/Typography_L_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초대코드로 친구 추가하기"
                android:textColor="@color/black_400" />

            <TextView
                android:id="@+id/tv_enter_code_desc"
                style="@style/Typography_S_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구에게 공유받은 초대코드를 입력하세요."
                android:textColor="@color/black_400" />

            <LinearLayout
                android:id="@+id/row_enter_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_invite_code_input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="6"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext"
                    android:hint="코드를 입력하세요"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_submit_invite_code"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_default"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="입력"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>