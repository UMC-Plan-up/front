<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container_invite_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 상단 타이틀 -->
        <LinearLayout
            android:id="@+id/section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/tv_title_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="카테고리 설정"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 친구 초대 -->
        <TextView
            android:id="@+id/tv_invite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="친구 초대"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_invite_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="새로운 친구를 초대하세요!"
            android:textSize="16sp"/>

        <!-- 나의 초대 코드 -->
        <TextView
            android:id="@+id/tv_my_invite_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="나의 초대 코드"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_my_invite_code_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구에게 공유해 보세요"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/container_my_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/row_my_invite_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_my_invite_code"
                    android:layout_width="231dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="나의초대코드"
                    android:background="@drawable/bg_edittext"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/btn_copy_invite_code"
                    android:layout_width="73dp"
                    android:layout_height="40dp"
                    android:text="복사"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_edittext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="공유"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_blue_edittext"
                android:backgroundTint="#548CFF"/>
        </LinearLayout>

        <!-- 초대코드 입력 -->
        <TextView
            android:id="@+id/tv_enter_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="초대코드로 친구 추가하기"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_enter_code_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유받은 초대코드를 입력하면 친구를 맺을 수 있어요!"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/row_enter_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_invite_code_input"
                android:layout_width="231dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="코드를 입력하세요"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="12dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btn_submit_invite_code"
                android:layout_width="73dp"
                android:layout_height="48dp"
                android:text="입력"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_blue_edittext"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>