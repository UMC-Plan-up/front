<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_width="247dp"
        android:layout_height="29dp"
        android:text="목표 설정이 완료되었어요!"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_complete"
        app:layout_constraintTop_toTopOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="116dp" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:text="친구들에게 내 목표가 공개됩니다!"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="#5383E3"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="321dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:text="@string/goal_share_info"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="#000000"
        android:layout_marginTop="346dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="276dp"
        android:layout_height="42dp"
        android:text="Plan-Up 사용 시작하기"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/btn_start_planup"
        android:layout_marginTop="437dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>