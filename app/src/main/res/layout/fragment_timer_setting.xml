<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="268dp"
        android:layout_height="33dp"
        android:text="@string/goal_set_shared_with_friend"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="@string/challenge_request_time"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/timer_ask"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 기본 UI -->
    <LinearLayout
        android:id="@+id/timeSetContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descText"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="33dp">

            <EditText
                android:id="@+id/hourEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/time"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"
                android:paddingStart="7.5dp"
                android:textColorHint="@color/black_300"
                android:background="@drawable/bg_timer_setting" />

            <ImageView
                android:id="@+id/hourArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="7dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_marginStart="4dp">

            <EditText
                android:id="@+id/minuteEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/minute"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"
                android:paddingStart="7.5dp"
                android:textColorHint="@color/black_300"
                android:background="@drawable/bg_timer_setting" />

            <ImageView
                android:id="@+id/minArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginTop="1dp"
                android:layout_gravity="end|center_vertical"

                android:layout_marginEnd="7dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_marginStart="4dp">

            <EditText
                android:id="@+id/secondEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/second"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"
                android:paddingStart="7.5dp"
                android:textColorHint="@color/black_300"
                android:background="@drawable/bg_timer_setting" />

            <ImageView
                android:id="@+id/secArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="7dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- 펼쳐진 UI (NumberPicker) -->
    <LinearLayout
        android:id="@+id/expandedPickerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/descText"
        app:layout_constraintStart_toStartOf="parent">

        <NumberPicker
            android:id="@+id/hourPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <NumberPicker
            android:id="@+id/minutePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <NumberPicker
            android:id="@+id/secondPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/warningText"
        android:layout_width="123dp"
        android:layout_height="18dp"
        android:text="@string/error_more_thirty_second"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#F81E1E"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/timeSetContainer"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background_gray"
        android:layout_marginTop="617dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
