<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/title_tv"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_friend_detail"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp"/>

    <TextView
        android:id="@+id/expected_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenge_request_time"
        style="@style/Typography_L_Semibold"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer_ask_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timer_ask"
        style="@style/Typography_S_Medium"
        android:textColor="@color/black_300"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/expected_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/challenge_timer_hour_tv"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        style="@style/Typography_SM_Medium"
        android:text="@string/time"
        android:textColor="@color/black_400"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/timer_ask_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_hour_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_hour_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_hour_tv"/>

    <TextView
        android:id="@+id/challenge_timer_minute_tv"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        android:text="@string/minute"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_400"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_hour_tv"
        app:layout_constraintStart_toEndOf="@id/challenge_timer_hour_tv" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_minute_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_minute_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_minute_tv"/>

    <TextView
        android:id="@+id/challenge_timer_second_tv"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        android:text="@string/second"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_400"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_hour_tv"
        app:layout_constraintStart_toEndOf="@id/challenge_timer_minute_tv" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_second_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_second_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_second_tv"/>

    <TextView
        android:id="@+id/error_tv"
        style="@style/Typography_XS_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/error_more_thirty_second"
        android:textColor="@color/red_300"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_timer_hour_tv"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/challenge_timer_next_btn"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_selector"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>