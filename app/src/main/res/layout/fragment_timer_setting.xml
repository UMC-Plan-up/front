<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_set_shared_with_friend"
        style="@style/Typography_2XL_Semibold"
        android:textColor="@color/black_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_iv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/expected_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_expect_time"
        style="@style/Typography_L_Semibold"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timer_ask"
        style="@style/Typography_S_Medium"
        android:textColor="@color/black_300"
        app:layout_constraintTop_toBottomOf="@id/expected_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <!-- 시간 드롭다운 -->
    <TextView
        android:id="@+id/challenge_timer_hour_tv"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        style="@style/Typography_SM_Medium"
        android:text="@string/time"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/expected_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="58dp"
        android:layout_marginStart="16dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_hour_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_hour_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_hour_tv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_timer_hour_rv"
        android:layout_width="70dp"
        android:layout_height="219dp"
        android:paddingStart="12dp"
        android:elevation="10dp"
        android:background="@drawable/bg_timer_dropdown"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/challenge_timer_hour_tv"
        app:layout_constraintTop_toBottomOf="@id/challenge_timer_hour_tv"
        android:visibility="gone"/>

    <!-- 분 드롭다운 -->
    <TextView
        android:id="@+id/challenge_timer_minute_tv"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        android:text="@string/minute"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/expected_time_tv"
        app:layout_constraintStart_toEndOf="@id/challenge_timer_hour_tv"
        android:layout_marginTop="58dp"
        android:layout_marginStart="4dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_minute_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_minute_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_minute_tv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_timer_minute_rv"
        android:layout_width="70dp"
        android:layout_height="219dp"
        android:paddingStart="12dp"
        android:elevation="10dp"
        android:background="@drawable/bg_timer_dropdown"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/challenge_timer_minute_tv"
        app:layout_constraintTop_toBottomOf="@id/challenge_timer_minute_tv"
        android:visibility="gone"/>

    <!-- 초 드롭다운 -->
    <TextView
        android:id="@+id/challenge_timer_second_tv"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:background="@drawable/bg_timer_setting"
        android:text="@string/second"
        style="@style/Typography_SM_Medium"
        android:textColor="@color/black_400"
        app:layout_constraintTop_toBottomOf="@id/expected_time_tv"
        app:layout_constraintStart_toEndOf="@id/challenge_timer_minute_tv"
        android:layout_marginTop="58dp"
        android:layout_marginStart="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_timer_second_rv"
        android:layout_width="70dp"
        android:layout_height="219dp"
        android:elevation="10dp"
        android:paddingStart="12dp"
        android:background="@drawable/bg_timer_dropdown"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/challenge_timer_second_tv"
        app:layout_constraintTop_toBottomOf="@id/challenge_timer_second_tv"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_timer"
        app:layout_constraintEnd_toEndOf="@id/challenge_timer_second_tv"
        app:layout_constraintTop_toTopOf="@id/challenge_timer_second_tv"
        app:layout_constraintBottom_toBottomOf="@id/challenge_timer_second_tv"/>

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_more_thirty_second"
        style="@style/Typography_XS_Medium"
        android:textColor="@color/red_300"
        app:layout_constraintTop_toBottomOf="@id/challenge_timer_hour_tv"
        app:layout_constraintStart_toStartOf="@id/challenge_timer_hour_tv"
        android:layout_marginTop="7dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/challenge_timer_next_btn"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:text="@string/btn_next"
        style="@style/Typography_S_Medium"
        android:background="@drawable/bg_btn_selector"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>