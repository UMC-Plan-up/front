<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_confirm_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tv_block_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="친구 1 님을 차단하시겠어요?"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_block_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="차단 시, 해당 계정에 알림이 가지 않으며 차단한 이용자에게는 내 계정의 활동 및 기록이 보이지 않게 됩니다."
        android:textSize="14sp"
        android:textColor="#444444"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_block"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="아니요"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="@drawable/bg_button_outline" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_confirm_block"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="예"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#4D79F6" />
    </LinearLayout>
</LinearLayout>