<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 상단 네비게이션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 5월 1주차 리포트"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- 목표별 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표별 기록"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 목표별 기록 레이아웃 -->
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="4dp"
                android:layout_margin="16dp"
                card_view:useCompatPadding="true">

                <!-- 내부 콘텐츠 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <!-- 공통 카드뷰 아이템 - 재사용 가능하도록 구조화 -->
                    <!-- 1. 헬스장 가기 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!-- 원형 진행도 -->
                            <FrameLayout
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp">

                                <!-- 원형 진행바 -->
                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="85"
                                    android:progressDrawable="@drawable/custom_progress_drawable"
                                    android:rotation="-90"
                                    android:scaleY="1"
                                    android:background="@android:color/transparent"/>

                                <!-- 퍼센트 텍스트 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="85%"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>
                            </FrameLayout>

                            <!-- 텍스트 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="헬스장 가기"
                                    android:textColor="#222222"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="달성 기준 : 3회 이상 헬스장 가기"
                                    android:textColor="#444444"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#FFEFEFEF"/>

                    <!-- 2. 토익 공부하기 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp">

                                <!-- 원형 진행바 -->
                                <ProgressBar
                                    android:id="@+id/progressBar2"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="85"
                                    android:progressDrawable="@drawable/custom_progress_drawable"
                                    android:rotation="-90"
                                    android:scaleY="1"
                                    android:background="@android:color/transparent"/>

                                <!-- 퍼센트 텍스트 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="85%"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="토익 공부하기"
                                    android:textColor="#222222"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="달성 기준 : 매일 30분 이상 교재 공부"
                                    android:textColor="#444444"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#FFEFEFEF"/>

                    <!-- 3. 독서하기 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp">

                                <!-- 원형 진행바 -->
                                <ProgressBar
                                    android:id="@+id/progressBar3"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="85"
                                    android:progressDrawable="@drawable/custom_progress_drawable"
                                    android:rotation="-90"
                                    android:scaleY="1"
                                    android:background="@android:color/transparent"/>

                                <!-- 퍼센트 텍스트 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="85%"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="&lt;~~~&gt; 읽기"
                                    android:textColor="#222222"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="달성 기준 : 일주일에 1챕터씩 독서하기"
                                    android:textColor="#444444"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- 일자별 성취율 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자별 성취율"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 일자별 성취율 레이아웃 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/white"
                android:elevation="4dp" />

            <!-- 일자별 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자별 기록"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16sp"/>

            <!-- 일자별 기록 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025.05.05 (월)"
                    android:fontFamily="@font/pretendard_semibold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사진"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="인증"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00:00"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘은 플랜업 회의를 했다. 뿌듯했다."
                            android:textSize="12sp"
                            android:fontFamily="@font/pretendard"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025.05.06 (화)"
                    android:fontFamily="@font/pretendard_semibold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사진"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="인증"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00:00"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025.05.07 (수)"
                    android:fontFamily="@font/pretendard_semibold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사진"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="인증"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@android:color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00:00"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:gravity="center" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="드디어 책을 완독했다. 앞으로 이 작가의 책을 좀 더 읽어봐\n야겠다. 이제 꾸준히 독서해보자"
                            android:textSize="12sp"
                            android:fontFamily="@font/pretendard"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="start" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <!-- 이번주 받은 활동 배지 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주 받은 활동 배지"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16sp"/>

            <!-- 이번주 받은 활동 배지 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_badge_leaf"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="top|center"
                        android:text="영향력 있는 시작"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_badge_trophy"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="top|center"
                        android:text="대화의 시작"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_badge_medal"/>


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="top|center"
                        android:text="도전의 시작"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <!-- 다음 목표를 향한 여정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 목표를 향한 여정"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16sp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- 꼭지 삼각형 (그림자 포함) -->
                <ImageView
                    android:id="@+id/triangle"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:elevation="6dp"
                    android:src="@drawable/bg_balloon_triangle" />

                <!-- 본체: 그림자 있는 카드로 교체 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/balloon_body_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="26dp">

                        <TextView
                            android:id="@+id/balloon_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 주 목표 달성량이 지난주에 비해서 N%나 높아졌어요! :0 \n이 페이스만 유지한다면, 네 번째 목표 잠금 해제도 금방이겠는데요?"
                            android:textSize="16sp"
                            android:textColor="#333333" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>