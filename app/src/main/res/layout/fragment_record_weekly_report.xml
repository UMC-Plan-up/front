<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/scroll_linear_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 상단 네비게이션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/back_report_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:id="@+id/tv_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 5월 1주차 리포트"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp" />

                <ImageView
                    android:id="@+id/front_report_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- 목표별 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표별 기록"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 목표별 기록 레이아웃(동적 컨테이너) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/goal_report_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"/>
            </androidx.cardview.widget.CardView>

            <!-- 일자별 성취율 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자별 성취율"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 일자별 성취율 레이아웃 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/white"
                android:elevation="4dp" />

            <!-- 일자별 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자별 기록"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 일자별 기록 레이아웃(동적 컨테이너) -->
            <LinearLayout
                android:id="@+id/daily_record_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

            <!-- 1:1 챌린지 (그대로 유지: 필요시 별도 연동) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1 챌린지"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="22dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="19dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결과"
                            android:textSize="16sp"
                            android:textColor="@color/blue_400"/>

                        <!-- 결과 / 상대 / 패널티 값 텍스트에 id 부여 -->
                        <TextView
                            android:id="@+id/tv_result_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="승리"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="챌린지 상대"
                            android:textSize="16sp"
                            android:textColor="@color/blue_400"/>

                        <TextView
                            android:id="@+id/tv_opponent_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="그린"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="패널티"
                            android:textSize="16sp"
                            android:textColor="@color/blue_400"/>

                        <TextView
                            android:id="@+id/tv_penalty_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="커피 사기"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_friend1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="12dp"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_friend_profile_sample1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_friend1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="친구1"
                                android:textSize="16sp" />

                            <ProgressBar
                                android:id="@+id/pb_friend1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:backgroundTint="#E0E0E0"
                                android:max="100"
                                android:progress="45"
                                android:progressDrawable="@drawable/bg_progress_chacol3" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_friend2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="12dp"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_friend_profile_sample2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_friend2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="친구2"
                                android:textSize="16sp" />

                            <ProgressBar
                                android:id="@+id/pb_friend2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:backgroundTint="#E0E0E0"
                                android:max="100"
                                android:progress="40"
                                android:progressDrawable="@drawable/bg_progress_chacol1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/check_challenge_record_ll"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="@drawable/rounded_blue_button"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="100dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기록 확인하러 가기"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right_white"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 이번주 받은 활동 배지 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주 받은 활동 배지"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <!-- 이번주 받은 활동 배지 레이아웃(동적 컨테이너) -->
            <LinearLayout
                android:id="@+id/badge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>

            <!-- 다음 목표를 향한 여정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 목표를 향한 여정"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/triangle"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:elevation="6dp"
                    android:src="@drawable/bg_balloon_triangle" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/balloon_body_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="26dp">

                        <TextView
                            android:id="@+id/balloon_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 주 목표 달성량이 지난주에 비해서 N%나 높아졌어요!"
                            android:textSize="16sp"
                            android:textColor="#333333" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>