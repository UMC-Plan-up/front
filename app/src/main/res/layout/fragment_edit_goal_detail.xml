<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="24dp">

        <ImageView
            android:id="@+id/edit_detail_back_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/edit_detail_friend_goal_title_tv"
            android:layout_width="286dp"
            android:layout_height="33dp"
            android:text="@string/goal_friend_detail"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_400"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/edit_detail_friend_goal_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:text="@string/goal_friend_detail_description"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/edit_detail_period_title_tv"
            android:layout_width="297dp"
            android:layout_height="27dp"
            android:text="@string/duration"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_400"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="109dp" />

        <TextView
            android:id="@+id/edit_detail_period_desc_tv"
            android:layout_width="297dp"
            android:layout_height="21dp"
            android:text="@string/goal_period_select_instruction"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp" />

        <LinearLayout
            android:id="@+id/edit_detail_day_selector_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_day_daily_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="6dp"
                android:text="@string/everyday"
                android:textSize="14sp"
                android:background="@drawable/btn_no"
                android:fontFamily="@font/pretendard_medium" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_day_weekly_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="6dp"
                android:text="@string/goal_period_weekly"
                android:textSize="14sp"
                android:background="@drawable/btn_no"
                android:fontFamily="@font/pretendard_medium" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_day_monthly_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="6dp"
                android:text="@string/goal_period_monthly"
                android:textSize="14sp"
                android:background="@drawable/btn_no"
                android:fontFamily="@font/pretendard_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit_detail_frequency_title_tv"
            android:layout_width="279dp"
            android:layout_height="27dp"
            android:text="@string/often"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_400"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="232dp" />

        <TextView
            android:id="@+id/edit_detail_frequency_desc_tv"
            android:layout_width="279dp"
            android:layout_height="24dp"
            android:text="@string/photo_often"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="263dp" />

        <LinearLayout
            android:id="@+id/edit_detail_frequency_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="288dp"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/edit_detail_frequency_et"
                android:layout_width="58dp"
                android:layout_height="28dp"
                android:hint="3"
                android:textSize="12sp"
                android:background="@drawable/bg_timer_setting"
                android:padding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColorHint="#737373"
                android:layout_marginEnd="5dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/edit_detail_frequency_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minimum_number"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit_detail_frequency_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_more_one"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_frequency_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/edit_detail_end_date_title_tv"
            android:layout_width="297dp"
            android:layout_height="24dp"
            android:text="@string/set_finish_day"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_400"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="386dp" />

        <TextView
            android:id="@+id/edit_detail_end_date_desc_tv"
            android:layout_width="279dp"
            android:layout_height="24dp"
            android:text="@string/goal_end_date_instruction"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="430dp"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:id="@+id/edit_detail_end_date_options_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="458dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_end_1week_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="@string/goal_end_after_1_week"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_end_1month_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="@string/goal_end_after_1_month"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_end_3month_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="@string/goal_end_after_3_months"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_detail_end_date_options_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_end_date_options_layout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_end_6month_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="@string/goal_end_after_6_months"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_end_1year_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="@string/goal_end_after_1_year"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_detail_next_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="@string/btn_next"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/pretendard_medium"
            android:background="@drawable/btn_next_background"
            android:layout_marginTop="616dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/edit_detail_direct_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_end_date_options_layout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_detail_direct_date_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/category_custom_option"
                android:background="@drawable/btn_no"
                android:textColor="@color/black_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_detail_direct_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_detail_end_date_options_layout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <NumberPicker
                android:id="@+id/edit_detail_year_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <NumberPicker
                android:id="@+id/edit_detail_month_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <NumberPicker
                android:id="@+id/edit_detail_day_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_detail_goal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="444dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/edit_detail_back_iv">

            <ImageView
                android:id="@+id/edit_detail_bg_iv"
                android:layout_width="0dp"
                android:layout_height="169dp"
                android:src="@drawable/bg_goal_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/edit_detail_lock_iv"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_lock"
                app:layout_constraintBottom_toBottomOf="@id/edit_detail_bg_iv"
                app:layout_constraintEnd_toEndOf="@id/edit_detail_bg_iv"
                app:layout_constraintStart_toStartOf="@id/edit_detail_bg_iv"
                app:layout_constraintTop_toTopOf="@id/edit_detail_bg_iv" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>