<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다양한 커뮤니티들이\n____님을 기다리고 있어요!"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/black_400"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <TextView
            android:id="@+id/categoryExercise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="운동"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/black_400"
            android:gravity="center" />

        <TextView
            android:id="@+id/categoryDiet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="식습관"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/black_400"
            android:gravity="center" />

        <TextView
            android:id="@+id/categoryReading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="독서"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/black_400"
            android:gravity="center" />

        <TextView
            android:id="@+id/categorySleep"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="수면"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/black_400"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/topDivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginTop="78dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <LinearLayout
        android:id="@+id/goal1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoryLayout">

        <LinearLayout
            android:id="@+id/goal1Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/goal1Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_tennis"
                android:layout_marginEnd="22dp" />

            <TextView
                android:id="@+id/goal1Text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="주 3회 이상 필라테스 수업 듣기"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/dividerGoal1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goal2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/goal1Layout">

        <LinearLayout
            android:id="@+id/goal2Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/goal2Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_boxing"
                android:layout_marginEnd="22dp" />

            <TextView
                android:id="@+id/goal2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주 1회 이상 10층 계단 오르기"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/dividerGoal2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goal3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/goal2Layout">

        <LinearLayout
            android:id="@+id/goal3Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/goal3Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hockey"
                android:layout_marginEnd="22dp" />

            <TextView
                android:id="@+id/goal3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매일 30분 러닝하기"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_400"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/dividerGoal3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goal4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/goal3Layout">

        <ImageView
            android:id="@+id/goal4Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_flag"
            android:layout_marginEnd="22dp" />

        <TextView
            android:id="@+id/goal4Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루 한 번 이상 헬스장 가기"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_400"
            android:textSize="16sp" />


    </LinearLayout>

    <View
        android:id="@+id/dividerGoal4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginTop="303dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startGoalSettingButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="목표 설정 시작하기"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/btn_next_background"
        android:layout_marginTop="617dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
