<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenge_received_timer_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/challenge_timer_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challenge_received_timer_inner_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/challenge_timer_title_tv"
                style="@style/Typography_2XL_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="@string/challenge_request_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_iv"/>

            <TextView
                android:id="@+id/challenge_timer_goal_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/goal_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_title_tv"/>

            <TextView
                android:id="@+id/challenge_timer_goal_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_goal_tv" />

            <TextView
                android:id="@+id/challenge_timer_amount_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/amount_once"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_goal_enter_tv" />

            <TextView
                android:id="@+id/challenge_timer_amount_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request"
                android:text=""
                android:textColorHint="@color/semanticB4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_amount_tv" />

            <TextView
                android:id="@+id/challenge_timer_verify_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_amount_enter_tv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_timer_verify_enter_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_verify_tv">

                <ImageView
                    android:id="@+id/challenge_timer_verify_enter_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_timer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_verify_enter_tv"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/challenge_timer_method"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_verify_enter_iv"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/challenge_timer_time_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/challenge_request_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_verify_enter_cl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_timer_time_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_time_tv">

                <TextView
                    android:id="@+id/challenge_timer_hour_enter_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="51dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_challenge_request_time"
                    android:text=""
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_hour_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_hour_enter_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_minute_enter_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="51dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_challenge_request_time"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_hour_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_minute_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/minute"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_minute_enter_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_second_enter_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="51dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_challenge_request_time"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_minute_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_second_tv"
                    style="@style/Typography_SM_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/second"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_second_enter_tv"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/challenge_timer_due_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/finish_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_time_cl" />

            <TextView
                android:id="@+id/challenge_timer_due_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="07/06 (일)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_due_tv" />

            <TextView
                android:id="@+id/challenge_timer_duration_title_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_due_enter_tv" />

            <TextView
                android:id="@+id/challenge_timer_duration_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_time"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_duration_title_tv" />

            <TextView
                android:id="@+id/challenge_timer_duration_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/day"
                app:layout_constraintBottom_toBottomOf="@id/challenge_timer_duration_enter_tv"
                app:layout_constraintStart_toEndOf="@id/challenge_timer_duration_enter_tv"
                app:layout_constraintTop_toTopOf="@id/challenge_timer_duration_enter_tv" />

            <TextView
                android:id="@+id/challenge_timer_frequency_title_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/often"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_duration_enter_tv" />

            <TextView
                android:id="@+id/challenge_timer_frequency_enter_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_often"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_frequency_title_tv" />

            <TextView
                android:id="@+id/challenge_timer_often_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/minimum_number"
                app:layout_constraintBottom_toBottomOf="@id/challenge_timer_frequency_enter_tv"
                app:layout_constraintStart_toEndOf="@id/challenge_timer_frequency_enter_tv"
                app:layout_constraintTop_toTopOf="@id/challenge_timer_frequency_enter_tv" />

            <TextView
                android:id="@+id/challenge_timer_penalty_tv"
                style="@style/Typography_L_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/penalty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_often_tv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/challenge_timer_penalty_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_challenge_request_verify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_penalty_tv">

                <ImageView
                    android:id="@+id/challenge_timer_penalty_enter_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_coffee2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/challenge_timer_penalty_enter_tv"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="커피 사기"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/challenge_timer_penalty_enter_iv"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_reject_tv"
                style="@style/Typography_S_Semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_reject"
                android:textColor="@color/blue_300"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_decline"
                app:layout_constraintStart_toStartOf="@id/btn_ask_new_penalty_tv"
                app:layout_constraintEnd_toStartOf="@id/btn_accept_tv"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_penalty_cl"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/btn_accept_tv"
                style="@style/Typography_S_Semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_approve"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_allow"
                app:layout_constraintStart_toEndOf="@id/btn_reject_tv"
                app:layout_constraintEnd_toEndOf="@id/btn_ask_new_penalty_tv"
                app:layout_constraintTop_toBottomOf="@id/challenge_timer_penalty_cl"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/btn_ask_new_penalty_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Typography_S_Semibold"
                android:text="@string/btn_ask_new_penalty"
                android:textColor="@color/blue_300"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/bg_challenge_request_offer"
                app:layout_constraintTop_toBottomOf="@id/btn_accept_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
