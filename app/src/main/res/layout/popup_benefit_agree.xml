<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_popup_benefit_agree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/popup_benefit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_benefit_title"
            android:textColor="@color/black_400"
            style="@style/Typography_L_Semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/popup_benefit_explain_tv"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:text="@string/popup_benefit_explain"
            android:textColor="@color/black_300"
            android:textAlignment="center"
            style="@style/Typography_S_Medium"
            app:layout_constraintTop_toBottomOf="@id/popup_benefit_title_tv"
            app:layout_constraintStart_toStartOf="@id/popup_benefit_title_tv"
            app:layout_constraintEnd_toEndOf="@id/popup_benefit_title_tv"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/popup_benefit_ok_btn"
            android:layout_width="260dp"
            android:layout_height="37dp"
            android:text="@string/btn_ok"
            android:background="@drawable/bg_btn_blue"
            android:textColor="@color/white_font"
            style="@style/Typography_S_Semibold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/popup_benefit_explain_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>