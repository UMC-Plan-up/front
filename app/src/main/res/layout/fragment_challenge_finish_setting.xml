<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/challenge_setting_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/challengeg_setting_title_tv"
        style="@style/Typography_2XL_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenge_finish_setting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_setting_back_iv"
        android:layout_marginTop="33dp"/>
    <ImageView
        android:id="@+id/challenge_setting_iv"
        android:layout_width="148dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_fireworks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeg_setting_title_tv"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/challenge_setting_subtitle_tv"
        style="@style/Typography_SM_Semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/challenge_finish_setting_subtitle"
        android:textColor="@color/blue_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_setting_iv"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="65dp"/>
    <TextView
        android:id="@+id/challenge_setting_content_tv"
        style="@style/Typography_SM_Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/challenge_finish_setting_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_setting_subtitle_tv"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="4dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/challenge_setting_check_cv"
        android:layout_width="320dp"
        android:layout_height="44dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp">
        <TextView
            android:id="@+id/challenge_setting_agreement_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btn_yes_checked"
            android:textAlignment="center"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>