<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenge_finish_setting_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challenge_finish_setting_inner_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/challengeg_setting_title_tv"
                style="@style/Typography_2XL_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:text="@string/challenge_finish_setting_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/challenge_setting_iv"
                android:layout_width="148dp"
                android:layout_height="140dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/ic_fireworks"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challengeg_setting_title_tv" />

            <TextView
                android:id="@+id/challenge_setting_subtitle_tv"
                style="@style/Typography_SM_Semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="30dp"
                android:text="@string/challenge_finish_setting_subtitle"
                android:textColor="@color/blue_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_setting_iv" />

            <TextView
                android:id="@+id/challenge_setting_content_tv"
                style="@style/Typography_SM_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:text="@string/challenge_finish_setting_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_setting_subtitle_tv" />
            <TextView
                android:id="@+id/challenge_checked_btn"
                style="@style/Typography_SM_Medium"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_btn_transparent"
                android:gravity="center"
                android:text="@string/btn_yes_checked"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/challenge_setting_content_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="224dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>