<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/edit_category_backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="33dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/edit_category_nextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_category_backIcon">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edit_category_goalSettingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구와 함께하는 세부 목표 수정"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black_400"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView20"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 수정 시, 참여 중인 친구들의 목표도 변경돼요."
                    android:textColor="@color/black_300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_category_goalSettingTitle" />

                <TextView
                    android:id="@+id/edit_category_categorySettingTitle"
                    android:layout_width="99dp"
                    android:layout_height="27dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="@string/category_setting"
                    android:textColor="@color/black_400"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView20"
                    android:layout_marginTop="28dp"/>

                <TextView
                    android:id="@+id/textView21"
                    style="@style/Typography_S_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여 중인 다른 친구가 없는 경우만 변경 가능해요."
                    android:textColor="@color/black_300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_category_categorySettingTitle" />

                <LinearLayout
                    android:id="@+id/edit_category_StudyLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_category_white"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/edit_category_StudyText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center"
                        android:text="@string/community_category_study"
                        android:textColor="#448AF7"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_ReadingLayout"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/edit_category_StudyLayout"
                    app:layout_constraintStart_toEndOf="@id/edit_category_StudyLayout"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/edit_category_ReadingText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_reading"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_DigitalDetoxLayout"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/edit_category_ReadingLayout"
                    app:layout_constraintStart_toEndOf="@id/edit_category_ReadingLayout"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/edit_category_DigitalDetoxText"
                        android:layout_width="75dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center"
                        android:text="@string/community_category_meditation"
                        android:textColor="#448AF7"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_MeditationLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_StudyLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/edit_category_MeditationText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_sleep"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_SleepLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toTopOf="@id/edit_category_MeditationLayout"
                    app:layout_constraintStart_toEndOf="@id/edit_category_MeditationLayout"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/edit_category_sleep_tv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_diet"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_InstrumentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_MeditationLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/edit_category_InstrumentText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_music"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_ExerciseLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toTopOf="@id/edit_category_InstrumentLayout"
                    app:layout_constraintStart_toEndOf="@id/edit_category_InstrumentLayout"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/edit_category_ExerciseText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_exercise"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_DiaryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toTopOf="@id/edit_category_ExerciseLayout"
                    app:layout_constraintStart_toEndOf="@id/edit_category_ExerciseLayout"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/edit_category_DiaryText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/community_category_journal"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_category_CustomLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_category_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_InstrumentLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/edit_category_custom_tv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/category_custom_option"
                        android:textSize="16sp"
                        android:textColor="#448AF7"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_category_customCategoryEditText"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:hint="@string/category_cooking"
                    android:textColorHint="@color/black_300"
                    android:textColor="@color/black_300"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingStart="12dp"
                    android:background="@drawable/bg_edittext_background1"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_CustomLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/edit_category_GuideText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_category1"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/black_300"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="6dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_customCategoryEditText" />

                <TextView
                    android:id="@+id/edit_category_GuideText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_category2"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/black_300"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="6dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_category_GuideText1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_category_nextButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="@string/btn_next"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:background="@drawable/btn_next_background"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>