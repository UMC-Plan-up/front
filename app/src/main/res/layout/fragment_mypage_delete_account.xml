<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/delete_account_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/delete_account_tv"
        app:layout_constraintBottom_toBottomOf="@id/delete_account_tv"/>

    <TextView
        android:id="@+id/delete_account_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록"
        app:layout_constraintStart_toEndOf="@id/delete_account_back_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/delete_account_title_tv"
        style="@style/TextAppearance.Pretendard.SemiBold.3XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_account_tv"
        android:layout_marginTop="6dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_account_noti_cl"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_account_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp">
    <TextView
        android:id="@+id/delete_account_name_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/delete_account_question_first_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님,"
        app:layout_constraintStart_toEndOf="@id/delete_account_name_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/delete_account_name_lv"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/semanticB1"
        app:layout_constraintStart_toStartOf="@id/delete_account_name_tv"
        app:layout_constraintEnd_toEndOf="@id/delete_account_name_tv"
        app:layout_constraintTop_toBottomOf="@id/delete_account_name_tv"/>
    <TextView
        android:id="@+id/delete_account_question_second_tv"
        style="@style/TextAppearance.Pretendard.Medium.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 Plan-Up을 탈퇴하시겠어요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_account_name_tv"/>

    <ImageView
        android:id="@+id/delete_account_noti_first_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/delete_account_noti_first_tv"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/delete_account_noti_first_tv"
        style="@style/TextAppearance.Pretendard.Medium.S"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_notice1"
        app:layout_constraintStart_toEndOf="@id/delete_account_noti_first_iv"
        app:layout_constraintTop_toBottomOf="@id/delete_account_question_second_tv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/delete_account_noti_second_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/delete_account_noti_second_tv"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/delete_account_noti_second_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_notice2"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toEndOf="@id/delete_account_noti_second_iv"
            app:layout_constraintTop_toBottomOf="@id/delete_account_noti_first_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/delete_account_agreement_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/delete_account_check_tv">
            <ImageView
                android:id="@+id/delete_agree_check_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_box_checked"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/delete_agree_uncheck_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_box_unchecked"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/delete_account_check_tv"
            style="@style/Typography_SM_Medium"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_agreement"
            android:textColor="@color/black_300"
            app:layout_constraintStart_toEndOf="@id/delete_account_agreement_cl"
            app:layout_constraintTop_toBottomOf="@id/delete_account_noti_second_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_account_reason_cl"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_account_noti_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/delete_account_reason_tv"
            style="@style/Typography_L_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_reason"
            android:textColor="@color/black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/delete_account_reason_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smile_emoji"
            app:layout_constraintStart_toEndOf="@id/delete_account_reason_tv"
            app:layout_constraintTop_toTopOf="@id/delete_account_reason_tv"
            app:layout_constraintBottom_toBottomOf="@id/delete_account_reason_tv"/>
        <EditText
            android:id="@+id/delete_account_reason_et"
            style="@style/Typography_S_Medium"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:hint="@string/delete_account_feedback"
            android:textColorHint="@color/black_300"
            app:layout_constraintTop_toBottomOf="@id/delete_account_reason_tv"
            android:background="@drawable/edit_text_outline"
            android:layout_marginTop="10dp"
            android:gravity="top"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btn_delete_account_tv"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_char5_selector"
        android:text="@string/btn_close_account"
        android:textColor="@color/white"
        style="@style/Typography_SM_Medium"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
