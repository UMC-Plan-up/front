<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="12dp" android:gravity="left|fill_vertical">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A000000"
                android:centerColor="#0D000000"
                android:endColor="#00000000"
                android:angle="0" />
        </shape>
    </item>

    <item android:width="12dp" android:gravity="right|fill_vertical">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#0D000000"
                android:endColor="#1A000000"
                android:angle="0" />
        </shape>
    </item>

    <item android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FCFCFC"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>
