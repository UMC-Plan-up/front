<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 레이어 (아래, 오른쪽에 위치) -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- 그림자 색상 -->
            <corners android:radius="4dp" />     <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 실제 내용 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>