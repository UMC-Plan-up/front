        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="Typography_2XS_Medium">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">5.5sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TopRoundedCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>

        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShape</item>
    </style>

    <style name="BottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BottomSheetRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TopRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomRoundedShape" parent="@style/ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>

    <style name="Theme.PlanUP.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_white_logo</item>
    </style>

    <style name="HomeNotificationFilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/challenge_tab_template</item>
    </style>


</resources>