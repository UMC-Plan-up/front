<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">4dp</item> <!-- 아이콘과 간격용 -->
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="DailyToDoProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_daily_todo_progress_bar</item>
    </style>

    <style name="Typography_3XL_Semibold">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="fontWeight">600</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="Typography_2XL_Semibold">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">11sp</item> <!-- 33 - 22 -->
