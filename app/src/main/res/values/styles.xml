        <item name="fontWeight">600</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="Typography_2XL_Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">11sp</item>
        <item name="android:letterSpacing">0.015</item>
